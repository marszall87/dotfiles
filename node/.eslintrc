{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "semi": 2,
    "quotes": [
      2,
      "single"
    ],
    "no-console": 1,
    "no-unused-vars": 1
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
